@model UdhariSystem.Models.Borrower
@{
    ViewBag.Title = "Add Borrower";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <h2>➕ Add New Borrower</h2>
    <form method="post">
        <div class="form-group mb-3">
            <label>Name</label>
            <input type="text" name="CustomerName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Phone</label>
            <input type="text" name="Phone" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Amount</label>
            <input type="number" step="0.01" name="AmountOwed" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Address</label>
            <textarea name="Address" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-success">💾 Save</button>
        <a href="@Url.Action("Index", "Borrower")" class="btn btn-secondary">↩ Back</a>
    </form>
</div>
