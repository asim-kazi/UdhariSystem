@model List<UdhariSystem.Models.Borrower>
@{
    ViewBag.Title = "Borrower List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <h2>📋 Borrower List</h2>

    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="search" class="form-control" placeholder="Search by name or phone..." value="@Request["search"]" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">🔍 Search</button>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Borrower")" class="btn btn-success">➕ Add Borrower</a>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>🆔 ID</th>
                <th>👤 Name</th>
                <th>📞 Phone</th>
                <th>💸 Amount</th>
                <th>🏠 Address</th>
                <th>⚙ Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.CustomerName</td>
                    <td>@b.Phone</td>
                    <td>₹@b.AmountOwed</td>
                    <td>@b.Address</td>
                    <td>
                        <a href="@Url.Action("Edit", "Borrower", new { id = b.Id })" class="btn btn-warning btn-sm">✏ Edit</a>
                        <a href="@Url.Action("Delete", "Borrower", new { id = b.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete?');">❌ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end fw-bold">
        💰 Total Outstanding: ₹@ViewBag.Total
    </div>
</div>
